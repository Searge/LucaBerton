# EditorConfig is awesome: http://EditorConfig.org
# Uses editorconfig to maintain consistent coding styles

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{tf,hcl,yml,yaml}]
indent_size = 2

[*.{py,sh}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{Makefile,**.mk}]
indent_style = tab
